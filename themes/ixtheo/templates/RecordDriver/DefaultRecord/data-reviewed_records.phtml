    <a href="<?=$linked_ppn?>"><?=$this->escapeHtml($title) . $reviewer?></a>
  <?php else: ?>
    <?=$this->escapeHtml($title) . $reviewer?>
  <?php endif; ?>
  <br/>
<?php endforeach; ?>