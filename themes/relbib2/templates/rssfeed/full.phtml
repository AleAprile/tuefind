<?=$this->HelpText()->render('rss', null, 'static'); ?>

<?php $rssItems = $this->tuefind()->getRssNewsEntries();?>
<?php if (count($rssItems) == 0):?>
<h1><?=$this->translate('rss_news_missing')?></h1>
<?php else:?>
    <?php if ($this->tuefind()->getRssNewsUrl()): ?>
        <h4><a href="<?=$this->tuefind()->getRssNewsUrl()?>"><i class="fa fa-bell" aria-hidden="true"></i> <?=$this->transEsc('Get RSS Feed')?></a></h4>
    <?php endif; ?>
    <div id="tf-rss-full">
        <?php foreach ($rssItems as $rssItem):?>
            <div class="tf-rss-full-item">
                <h1>
                    <a href="<?=$rssItem['link']?>" target="_blank"><img src="<?=$this->tuefind()->getRssFeedIcon($rssItem['tuefind:rss_title'])?>">&nbsp;<?=$rssItem['title']?></a>
                </h1>
                <p>
                    <a href="<?=$rssItem['tuefind:rss_url']?>" target="_blank"><?=$rssItem['tuefind:rss_title']?></a>: <?=date('d.m.Y H:i:s', strtotime($rssItem['pubDate']))?>
                </p>
                <?php if (!empty($rssItem['description'])):?>
                    <p>
                        <?=$rssItem['description']?>
                    </p>
                <?php endif;?>
            </div>
        <?php endforeach;?>
    </div>
<?php endif;?>
