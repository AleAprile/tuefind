<div class="row">
    <div class="col-md-9">
        <?=$this->HelpText()->render('rss_top', null, 'static'); ?>

        <?php $rssItems = $this->tuefind()->getRssNewsEntries();?>
        <?php if (count($rssItems) == 0):?>
            <h1><?=$this->translate('rss_news_missing')?></h1>
        <?php else:?>
            <?php $redirectGroup = 'relbib-rss-full'; ?>
            <div id="tf-rss-full">
                <?php foreach ($rssItems as $rssItem):?>
                    <div class="tf-rss-full-item">
                        <h2>
                            <a href="<?=$this->tuefind()->getRedirectUrl($rssItem['link'], $redirectGroup)?>" target="_blank"><img src="<?=$this->tuefind()->getRssFeedIcon($rssItem['tuefind:rss_title'])?>" height="20">&nbsp;<?=$rssItem['title']?></a>
                        </h2>
                        <p>
                            <a href="<?=$this->tuefind()->getRedirectUrl($rssItem['tuefind:rss_url'], $redirectGroup)?>" target="_blank"><?=$rssItem['tuefind:rss_title']?></a>: <?=date('d.m.Y H:i:s', strtotime($rssItem['pubDate']))?>
                        </p>
                        <?php if (!empty($rssItem['description'])):?>
                            <p>
                                <?=$rssItem['description']?>
                            </p>
                        <?php endif;?>
                    </div>
                <?php endforeach;?>
            </div>
        <?php endif;?>
    </div>
    <div class="col-md-3">
        <?=$this->HelpText()->render('rss_side', null, 'static'); ?>
    </div>
</div>
